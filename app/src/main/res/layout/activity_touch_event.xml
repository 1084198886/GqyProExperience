<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.gqy.experience.activities.touchevent.view.ParentContainerView
        android:id="@+id/ll_parent"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/light_green">

        <android.gqy.experience.activities.touchevent.view.ChildTextView
            android:id="@+id/tv_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="80dp"
            android:background="@color/cl_red"
            android:gravity="center"
            android:text="子View\n我是内容"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub内容"
            android:gravity="center"
            android:background="@color/cl_red"
            android:textColor="@color/white"
            android:textSize="40sp" />

    </android.gqy.experience.activities.touchevent.view.ParentContainerView>

    <Button
        android:id="@+id/btn_offsetLeftAndRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:text="child相对Parent水平偏移20px"
        android:textSize="20sp" />

    <Button
        android:id="@+id/offsetTopAndBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_offsetLeftAndRight"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:text="child相对Parent垂直偏移20px"
        android:textSize="20sp" />

    <Button
        android:id="@+id/scrollContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offsetTopAndBottom"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:text="垂直滚动child"
        android:textSize="20sp" />

    <Button
        android:id="@+id/setTranslationX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollContent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:text="setTranslationX使子View相对原始位置水平偏移"
        android:textSize="20sp" />

    <Button
        android:id="@+id/setTranslationY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setTranslationX"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:text="setTranslationY使子View相对原始位置垂直偏移"
        android:textSize="20sp" />
</RelativeLayout>